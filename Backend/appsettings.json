{
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};Persist Security Info=True;SSL Mode=${DB_SSL_MODE}"
  },
  "EmailSettings": {
    "SmtpServer": "${EMAIL_SMTP_SERVER}",
    "SmtpPort": "${EMAIL_SMTP_PORT}",
    "SenderName": "${EMAIL_SENDER_NAME}",
    "SenderEmail": "${EMAIL_SENDER_EMAIL}",
    "Username": "${EMAIL_USERNAME}",
    "Password": "${EMAIL_PASSWORD}"
  },
  "SepayConfig": {
    "AccountNumber": "${SEPAY_ACCOUNT_NUMBER}",
    "BankName": "${SEPAY_BANK_NAME}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "${LOG_LEVEL_DEFAULT}",
      "Microsoft.AspNetCore": "${LOG_LEVEL_MICROSOFT}"
    }
  },
  "AllowedHosts": "${ALLOWED_HOSTS}"
}
